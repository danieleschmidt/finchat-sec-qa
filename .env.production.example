# FinChat-SEC-QA Production Environment Configuration
# Copy this file to .env.production and configure for your production environment

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secure-secret-key-here-change-this

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
MAX_REQUESTS=1000
TIMEOUT=120

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=finchat_prod
POSTGRES_USER=finchat_user
POSTGRES_PASSWORD=your-secure-database-password-here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
EDGAR_API_KEY=your-edgar-api-key-here

# Monitoring and Observability
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_PASSWORD=your-secure-grafana-password-here
GRAFANA_USER=admin

# SSL/TLS Configuration
ACME_EMAIL=admin@yourdomain.com
SSL_CERT_PATH=/etc/ssl/certs/finchat.crt
SSL_KEY_PATH=/etc/ssl/private/finchat.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_S3_BUCKET=finchat-backups
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Security Settings
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,localhost
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Cache Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000000  # 1M entries

# Quantum Computing (if available)
QUANTUM_BACKEND_URL=your-quantum-backend-url
QUANTUM_API_KEY=your-quantum-api-key

# Performance Optimization
ENABLE_PERFORMANCE_OPTIMIZATION=true
ENABLE_QUANTUM_SCALING=true
ENABLE_AUTONOMOUS_VALUE_DISCOVERY=true

# Global Deployment
DEFAULT_REGION=us-east-1
SUPPORTED_REGIONS=us-east-1,eu-west-1,ap-southeast-1
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Compliance
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years for financial data
AUDIT_LOG_RETENTION_DAYS=2555

# Alerting
ALERT_EMAIL=alerts@yourdomain.com
ALERT_SLACK_WEBHOOK=your-slack-webhook-url
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=true

# Resource Limits
MAX_MEMORY_USAGE_PCT=85
MAX_CPU_USAGE_PCT=80
MAX_DISK_USAGE_PCT=90
CONNECTION_POOL_SIZE=20

# Feature Flags
ENABLE_VOICE_INTERFACE=true
ENABLE_MULTI_COMPANY_ANALYSIS=true
ENABLE_RISK_INTELLIGENCE=true
ENABLE_CITATION_TRACKING=true

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30
ENABLE_STRUCTURED_LOGGING=true

# Health Checks
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60
ENABLE_DEEP_HEALTH_CHECKS=true

# Development/Testing (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_TEST_ENDPOINTS=false
MOCK_EXTERNAL_SERVICES=false