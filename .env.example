# FinChat SEC QA Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# FastAPI Server
FINCHAT_HOST=0.0.0.0
FINCHAT_PORT=8000

# Flask WebApp  
FINCHAT_WEBAPP_HOST=0.0.0.0
FINCHAT_WEBAPP_PORT=5000

# Logging Configuration
FINCHAT_LOG_LEVEL=INFO

# Flask Environment (development/production)
FLASK_ENV=production

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per time window
FINCHAT_RATE_LIMIT_MAX_REQUESTS=100

# Time window in seconds for rate limiting
FINCHAT_RATE_LIMIT_WINDOW_SECONDS=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Minimum token length for authentication
FINCHAT_MIN_TOKEN_LENGTH=16

# Password complexity requirements (number of criteria that must be met)
FINCHAT_MIN_PASSWORD_CRITERIA=3

# Failed authentication attempts before lockout
FINCHAT_FAILED_ATTEMPTS_LOCKOUT_THRESHOLD=3

# Lockout duration in seconds
FINCHAT_LOCKOUT_DURATION_SECONDS=3600

# =============================================================================
# INPUT VALIDATION LIMITS
# =============================================================================

# Maximum length for user questions
FINCHAT_MAX_QUESTION_LENGTH=1000

# Maximum length for stock ticker symbols
FINCHAT_MAX_TICKER_LENGTH=5

# Maximum length for SEC form types
FINCHAT_MAX_FORM_TYPE_LENGTH=10

# Maximum length for risk analysis text
FINCHAT_MAX_RISK_TEXT_LENGTH=5000

# Maximum length for CIK identifiers
FINCHAT_MAX_CIK_LENGTH=10

# Maximum length for accession numbers
FINCHAT_MAX_ACCESSION_LENGTH=20

# =============================================================================
# HTTP CLIENT CONFIGURATION
# =============================================================================

# HTTP request timeout in seconds
FINCHAT_HTTP_TIMEOUT_SECONDS=30

# Maximum number of HTTP retries
FINCHAT_HTTP_MAX_RETRIES=3

# Delay between retries in seconds
FINCHAT_HTTP_RETRY_DELAY_SECONDS=1

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================

# Maximum document size for processing (in bytes)
FINCHAT_MAX_DOCUMENT_SIZE_BYTES=10485760

# Maximum number of documents to process in bulk operations
FINCHAT_MAX_BULK_DOCUMENTS=10

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# SEC EDGAR API Configuration (if needed)
# SEC_API_BASE_URL=https://www.sec.gov/Archives/edgar
# SEC_API_USER_AGENT=FinChatBot/1.0

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Cache directory (container-relative path)
FINCHAT_CACHE_DIR=/app/.cache/finchat_sec_qa

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Enable Prometheus metrics
FINCHAT_ENABLE_METRICS=true

# Metrics port (if different from main service port)
FINCHAT_METRICS_PORT=8000

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================

# Enable debug mode (DO NOT use in production)
# FINCHAT_DEBUG=false

# Enable verbose logging for development
# FINCHAT_VERBOSE_LOGGING=false